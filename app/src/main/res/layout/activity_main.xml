<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="346dp"
        android:layout_height="340dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:columnCount="3"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/category"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/button_red"
            app:backgroundTint="@color/color1"
            android:text="Category"
            android:textSize="11sp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/brand"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/button_red"
            app:backgroundTint="@color/color2"
            android:text="Brand"
            android:textSize="11sp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/product"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/button_red"
            app:backgroundTint="@color/color3"
            android:text="Product"
            android:textSize="11sp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/category_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/button_red"
            app:backgroundTint="@color/color1"
            android:text="Category View"
            android:textSize="11sp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/brand_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/button_red"
            app:backgroundTint="@color/color2"
            android:text="Brand
            View"
            android:textSize="11sp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/product_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:text="Product View"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:backgroundTint="@color/color3"
            app:srcCompat="@drawable/button_red" />

        <Button
            android:id="@+id/pos"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/button_red"
            app:backgroundTint="@color/color1"
            android:text="POS"
            android:textSize="11sp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/post_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/button_red"
            app:backgroundTint="@color/color2"
            android:text="POS View"
            android:textSize="11sp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/post_print"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:text="POS PRINT"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:backgroundTint="@color/color3"
            app:srcCompat="@drawable/button_red" />

    </GridLayout>

    <ImageView
        android:id="@+id/refresh"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/ic_baseline_refresh_24"
        android:backgroundTint="@color/btn_color1"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.913"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.906">
    </ImageView>


</androidx.constraintlayout.widget.ConstraintLayout>
